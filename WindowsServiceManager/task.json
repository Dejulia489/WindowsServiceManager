
{
    "id": "7dad075d-a817-45ac-baab-4c1376d2885e",
    "name": "WindowsServiceManager",
    "friendlyName": "Windows Service Manager",
    "description": "Release task for installing a windows service",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Dejulia489",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Install Windows Service",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "ServiceName",
            "type": "string",
            "label": "myService",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The name of the windows service installed on the machine"
        },
        {
            "name": "PackagePath",
            "type": "filePath",
            "label": "PackagePath",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The path to the service artifact"
        },
        {
            "name": "CleanInstall",
            "type": "boolean",
            "label": "CleanInstall",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "If this is true, this will remove all the files in the partent directory of this .exe prior to copying the package.",
            "groupName": "advanced"
        }
    ],
    "execution": {
        "execution": {
            "PowerShell3": {
                "target": "InstallWindowsService.ps1",
                "platforms": [
                    "windows"
                ],
                "workingDirectory": "$(currentDirectory)"
            }
        }
    }
}